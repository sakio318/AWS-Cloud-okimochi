<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/sidebar', user:@user %>
    </div>
    <div class="col-lg-8">
      <!--エラーメッセージレンダリング-->
      <div class="error_messages">
        <%= render 'layouts/error_messages', model: @new_item %>
      </div>
      <h4>新規投稿画面</h4>
        <%= form_with model: @new_item, local:true do |f| %>
        <h6>商品名</h6>
        <%= f.text_field :name %>
        <h6>お店の名前</h6>
        <%= f.text_field :shop_name %>
        <h6>包装</h6>
        <%= f.radio_button :packing, "true" %>個包装
        <%= f.radio_button :packing, "false" %>同梱
        <h6>この商品について</h6>
        <%= f.text_area :introduction, size: "30x5" %>
        <h6>ジャンル</h6>
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>

        <h6>シチュエーション</h6>
        <%= f.collection_check_boxes :situation_ids, Situation.all, :id, :situation, include_hidden: false %>

        <h6>画像</h6>
        <%= f.attachment_field :post_images_photos, multiple: true,include_hidden: false %>
        <%= f.submit '投稿する' %>
        <% end %>
  </div>
</div>

<img id="preview_0" style="width:15%;">
<img id="preview_1" style="width:15%;">
<img id="preview_2" style="width:15%;">
<img id="preview_3" style="width:15%;">
<img id="preview_4" style="width:15%;">

<script>
$('#item_post_images_photos').on('change', function (e) {

    if(e.target.files.length > 3){

      alert('一度に投稿できるのは3枚までです。');
      // 五枚以上の画像を選択していた場合、選択したファイルをリセット。
      $('#item_post_images_photos').val = "";

      // 以前の画像のプレビューが残っていた場合は、
      // まだ画像選択できていると勘違いを誘発するため初期化。
      for( let i = 0; i < 3; i++) {
        $(`#preview_${i}`).attr('src', "");
      }

    }else{
      let reader = new Array(3);

      // 画像選択を二回した時、一回目より数が少なかったりすると画面上に残るので初期化
      for( let i = 0; i < 3; i++) {
        $(`#preview_${i}`).attr('src', "");
      }

      for(let i = 0; i < e.target.files.length; i++) {
        reader[i] = new FileReader();
        reader[i].onload = finisher(i,e);
        reader[i].readAsDataURL(e.target.files[i]);

        // onloadは別関数で準備しないとfor文内では使用できないので、関数を準備。
        function finisher(i,e){
          return function(e){
          $(`#preview_${i}`).attr('src', e.target.result);
          }
        }
      }
   }
});
</script>
