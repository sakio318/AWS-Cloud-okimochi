<div class="container mt-5">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/sidebar', user:@user %>
      <p><%= link_to '新しい おきもち を追加する' ,  new_item_path, class:"btn btn-sm btn-outline-primary" %></p>
    </div>
    <div class="col-lg-9">
      <!--検索機能-->
      <%= form_with url: search_path, method: :get, local:true do |f| %>
        <%= f.select :option, [["ユーザー","1"],["おきもち","2"]] %>
        <%= f.text_field :search %>

        <%= f.submit '検索' %>
      <% end %>
      <h4>おきもち一覧画面</h4>
      <!--投稿一覧レンダリング-->
        <%= render 'items/index', items:@items %>
      <%= paginate @items %>
    </div>
  </div>
</div>