<div class="container mt-5">
  <div class="row">
    <div class="col-7 offset-1">
      <h5 class="ml-5 mb-3">おきもち一覧画面</h5>
    </div>
    <div class="col-3">
      <%= link_to '新しい おきもち を追加する' ,  new_item_path, class:"btn btn-sm btn-outline-primary" %>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-striped">
          <% @items.each do |item| %>
              <tr>
                <td>画像</td>
                <td>製品名</td>
                <td>
                  <%= link_to item_path(item) do %>
                   <%= item.name %>
                  <% end %>
                </td>
                <td>販売店名</td>
                <td><%= item.shop_name %></td>
                <td>気になる</td>
                <td>レヴュー</td>
                <td>包装
                  <% if item.packing %>
                      個包装
                  <% elsif %>
                      同梱
                  <% end %>
                </td>
              </tr>
            <% end %>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>