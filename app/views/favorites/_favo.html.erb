<% if item.favorited_by?(current_user) %>
  <h6>
    <%= link_to  item_favorites_path(item.id),method: :delete,remote: true, class:"btn btn-outline-danger" do %>
      <i class="fas fa-heart"></i><%= item.favorites.count %>
    <% end %>
  <h6>
    <% else %>
  <h6>
    <%= link_to  item_favorites_path(item.id), method: :post, remote: true,class:"btn btn-outline-danger" do %>
      <i class="far fa-heart"></i><%= item.favorites.count %>
    <% end %>
  </h6>
<% end %>