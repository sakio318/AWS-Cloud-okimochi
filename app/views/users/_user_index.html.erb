<% users.each do |user| %>
  <div class="index_user">
    <div>
      <%= attachment_image_tag user, :image, format: 'jpeg', fallback: "logo (3).jpg",
          size: "80x80" %>
    </div>
  <div>
    <div>
      <h6><i class="fas fa-user"></i>アカウント名</h6>
      <%= link_to user_path(user.id) do %>
        <div><%= user.name %></div>
      <% end %>
    </div>
    <div>
      <h6><i class="fas fa-chalkboard-teacher"></i>自己紹介</h6>
      <div><%= user.introduction %></div>
    </div>
  </div>
</div>
<% end %>


