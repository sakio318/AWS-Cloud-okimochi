<div class="container mt-5">
  <div class="row">
    <div class="col-7 offset-1">
      <h5 class="ml-5 mb-3">ユーザ一覧画面</h5>
    </div>
  </div>
</div>
<div class="col-9 offset-2">
  <table class="table table-striped">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.image %></td>
        <td><%= link_to user_path(user.id) do %>
              <%= user.name %>
            <% end %>
        </td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </table>
</div>