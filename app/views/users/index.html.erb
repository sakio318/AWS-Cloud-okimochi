<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'sidebar', user:@user %>
    </div>
    <div class="col-lg-9">
      <h5>ユーザ一覧画面</h5>
    </div>
  </div>
</div>
<div class="col-9 offset-2">
  <table class="table table-striped">
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :image, format: 'jpeg', fallback: "logo (3).jpg", size: "100x100" %>
          <%= link_to user_path(user.id) do %>
          <%= user.name %>
        </td>
        <td>
          <% end %>
        </td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </table>
</div>